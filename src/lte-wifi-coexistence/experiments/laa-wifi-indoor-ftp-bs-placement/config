# Simulation configuration parameters used by scripts for simulations running and plotting
#

# which transport protocol, Ftp or Tcp
transports="Ftp"
# main simulation parameters

# actual duration is scaled by ftp Lambda value
base_duration=960
cell=Laa
lbtTxopList="8"
cwUpdateRules="nacks80"
udpRates="200Kbps"
energyDetectionList="-72.0"
# wifiEnergyDetectionList="-62.0 -82.0"
ftpLambdas="2.5"
dropPackets=0
rlcAmRbsTimerList="20"
drsPeriodList="80"
tcpRlcMode="RlcAm"
bsCornerPlacement=1

voiceEnabled=1
# change TCP segment size from default of 536
tcpSegSize=1440
# TCP initial congestion window defaults to 1; change it here
tcpInitialCw=10

# logging
logBeaconArrivals=1
logBeaconNodeId=40
logPhyNodeId=4
logWifiRetries=1
logWifiFailRetries=1
lteDutyCycle=0.5
logHarqFeedback=1
logTxops=1
logCwChanges=1
logBackoffChanges=1
logPhyArrivals=1

#other
RngRun=1
OPERATORS="A B"

# specific ploting parameters
LATENCY_CDF_RANGE="[0:500][0:1]"
THROUGHPUT_CDF_RANGE="[0:150][0:1]"

